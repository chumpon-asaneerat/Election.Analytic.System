<Window x:Class="WpfTestJsonMap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Top" Height="40" 
                   Margin="10">
            <TextBlock DockPanel.Dock="Left" Text="File Name:" VerticalAlignment="Center" 
                       FontSize="16"/>
            <TextBlock DockPanel.Dock="Left" Width="10" 
                       FontSize="16"/>
            <Button x:Name="cmdBrowse" DockPanel.Dock="Right" Width="100" Content="Browse"
                    FontSize="16"
                    Click="cmdBrowse_Click"/>
            <TextBlock x:Name="txtFileName" Width="300"  VerticalAlignment="Center" HorizontalAlignment="Left" 
                       FontSize="16"/>
        </DockPanel>
        <Grid Margin="5">
            <Border BorderBrush="Silver" BorderThickness="1">
                <Canvas x:Name="map" />
            </Border>
        </Grid>
    </DockPanel>
</Window>
