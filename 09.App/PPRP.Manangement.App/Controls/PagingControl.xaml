<UserControl x:Class="PPRP.Controls.PagingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="Transparent"
             d:DesignHeight="40"
             d:DesignWidth="350"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="Transparent">
        <Button x:Name="cmdFirst"
                Margin="3"
                Width="50"
                Content="&lt;&lt;"
                Style="{StaticResource InlineButton}"
                Click="cmdFirst_Click" />
        <Button x:Name="cmdPrev"
                Margin="3"
                Width="50"
                Content="&lt;"
                Style="{StaticResource InlineButton}"
                Click="cmdPrev_Click" />
        <TextBlock x:Name="txtCurrentPage"
                   Foreground="{StaticResource BlackBlush}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Margin="10,0"
                   Width="Auto"
                   Text="หน้าที่ 0/0" />
        <Button x:Name="cmdNext"
                Margin="3"
                Width="50"
                Content="&gt;"
                Style="{StaticResource InlineButton}"
                Click="cmdNext_Click" />
        <Button x:Name="cmdLast"
                Margin="3"
                Width="50"
                Content="&gt;&gt;"
                Style="{StaticResource InlineButton}"
                Click="cmdLast_Click" />
    </StackPanel>
</UserControl>
