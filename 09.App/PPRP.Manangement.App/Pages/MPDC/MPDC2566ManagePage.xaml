                    <ItemsControl x:Name="lvMPDC2566"
                                  HorizontalContentAlignment="Stretch"
                                  Background="White">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander Style="{StaticResource ExpanderRightToggleStyle}" IsExpanded="True">
