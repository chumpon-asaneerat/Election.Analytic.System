            </Grid>
        </Border>
        <!--  NAVIAGE MENU AREAS  -->
        <DockPanel LastChildFill="True" Margin="20">
            <!--  LINE 1  -->
            <TextBlock DockPanel.Dock="Top"
                       FontSize="40"
                       FontWeight="DemiBold"
                       Foreground="{StaticResource BlueHeavyBrush}"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       TextTrimming="None"
                       Text="สถิติผลคะแนนเลือกตั้งปี 2562" />
